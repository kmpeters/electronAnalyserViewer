
# Macros:
#  P        Device Prefix
#  R        Device Suffix
#  PORT     Asyn Port name
#  TIMEOUT  Timeout
#  ADDR     Asyn Port address
file "$(AREA_DETECTOR)/db/ADBase.template"
{
pattern
{ P, R, PORT, TIMEOUT, ADDR }
{ "29idcEA:", "det1:", "CCD.CAM", "1", 	"0"  }
}

# Macros:
#  P             Device Prefix
#  R             Device Suffix
#  PORT          Asyn Port name
#  TIMEOUT       Timeout
#  ADDR          Asyn Port address
#  NDARRAY_PORT  Input Array Port
#  NDARRAY_ADDR  Input Array Address
#  Enabled       Plugin Enabled at startup?
file "$(AREA_DETECTOR)/ADApp/Db/NDPluginBase.template"
{
pattern
{ P, R, PORT, TIMEOUT, ADDR, NDARRAY_PORT, NDARRAY_ADDR, Enabled }
{ "29idcEA:", "ROI1:", "CCD.ROI", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "HDF1:", "CCD.HDF", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "TIFF1:", "CCD.TIFF", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "netCDF1:", "CCD.NETCDF", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "image1:", "CCD.ARR", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "MPG:", "CCD.MPG", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "Proc1:", "CCD.PROC", "1", "0", "CCD.CAM", "0", "0" }
{ "29idcEA:", "Stats1:", "CCD.STAT", "1", "0", "CCD.CAM", "0", "0" }
}

